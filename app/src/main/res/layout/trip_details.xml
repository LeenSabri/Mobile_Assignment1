<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_icon"
            android:padding="8dp"
            app:srcCompat="@drawable/back_icon"/>

        <TextView
            android:id="@+id/tripTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="10dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tripImage"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:textSize="15sp"
                android:paddingTop="4dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="18dp"
                android:paddingBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location:"
                        android:textColor="#222"
                        android:textSize="16sp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tvStartingPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Starting Point:"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:paddingTop="6dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tvCoordinator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coordinator:"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:paddingTop="6dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:paddingTop="6dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tvAllowed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Allowed:"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:paddingTop="6dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tvRegistered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registered:"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:paddingTop="6dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tvRemaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remaining:"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:paddingTop="6dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tripType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trip Type:"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:paddingTop="6dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tripLunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Include Lunch:"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:paddingTop="6dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tvFamily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Family Friendly:"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:paddingTop="6dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                        android:textColor="#0A7BFF"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:paddingTop="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnBookNow"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Book Now"
                android:textAllCaps="false"
                android:backgroundTint="#592B96"
                android:textColor="#FFF"
                android:textSize="17sp"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
